<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="YourThemeName" parent="@android:Theme.Black">

        <!-- Tell Android to use a custom style when creating a ToggleButton -->
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <!-- Perhaps more theme items here...? -->
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/btn_switch_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <!-- vinay -->
    <style name="red_header_font">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="red_label_font">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="black_bold_font">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="black_bold_font_medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

