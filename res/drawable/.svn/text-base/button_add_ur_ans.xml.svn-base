<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/light_grey" />

            <stroke android:width="1dp" android:color="@android:color/darker_gray" />

            <padding android:bottom="7dp" android:left="10dp" android:right="10dp" android:top="7dp" />
        </shape></item>
    <item><layer-list>
            <item><shape>
                    <solid android:color="@android:color/transparent" />
                </shape></item>
            <item android:bottom="1dp" android:left="2dp" android:right="2dp"><shape>
                    <solid android:color="@android:color/transparent" />

                    <stroke android:width="1dp" android:color="@color/list_devider_color" />

                    <padding android:bottom="7dp" android:left="10dp" android:right="10dp" android:top="7dp" />
                </shape></item>
        </layer-list></item>

</selector>