    <RelativeLayout
        android:id="@+id/home_rel_bottom"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#1b8140" >

        <TextView
            android:id="@+id/home_share"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/filter_and_share_button_selector"
            android:drawableLeft="@drawable/share_icon"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Share"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/home_filter"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignBaseline="@+id/home_share"
            android:layout_alignBottom="@+id/home_share"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/home_share"
            android:background="@drawable/filter_and_share_button_selector"
            android:drawableLeft="@drawable/filter_icon"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Filter"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/home_rel_bottom" >

        <LinearLayout
            android:id="@+id/logDetails_rel_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/home_filter_txt_NoRecord"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="There are no migraine records in the diary"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp"
        android:visibility="gone" />
    
    
