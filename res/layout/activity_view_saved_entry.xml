<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp" >

            <TextView
                android:id="@+id/txtViewEntry"
                style="@style/red_label_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/the_date_on_entry" />

            <View
                android:id="@+id/deviderEntry"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/txtViewEntry"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:background="@color/devider_color" >
            </View>

            <Button
                android:id="@+id/btnEntry"
                style="@style/black_bold_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deviderEntry"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/button_white"
                android:gravity="left|center_vertical"
                android:text="@string/today" />

            <TextView
                android:id="@+id/txtViewHeadache"
                style="@style/red_label_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnEntry"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/did_you_have_a_headache_on_this_day_" />

            <View
                android:id="@+id/deviderHeadache"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/txtViewHeadache"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:background="@color/devider_color" >
            </View>

            <LinearLayout
                android:id="@+id/headacheButtonPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deviderHeadache"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnHeadacheYes"
                    style="@style/selected_button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/yes_i_had_a_headache" />

                <Button
                    android:id="@+id/btnHeadacheNo"
                    style="@style/selected_button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/no_i_did_not" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stepFragmentsPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headacheButtonPanel"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/doneCancelButtonPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stepFragmentsPanel"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnSavedEntryCancel"
                    style="@style/green_button_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/btnSavedEntryDone"
                    style="@style/green_button_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="@string/done" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>